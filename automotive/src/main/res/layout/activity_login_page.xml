<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="#E4E4E4">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="ĐĂNG NHẬP HỆ THỐNG"
            android:textSize="100dp"
            android:textStyle="bold"
            android:textColor="#626262"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:gravity="center_vertical">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="50">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_lock_person_24"
                android:layout_weight="10"
                android:backgroundTint="#E4E4E4"
                android:contentDescription="Thông báo">
            </ImageButton>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="40"
                android:layout_marginRight="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="16"
                    >
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_account_box_24"
                        android:layout_weight="2"
                        android:background="#CCCCCC"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:contentDescription="Thông báo">
                    </ImageButton>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Username"
                        android:inputType="text"
                        android:layout_weight="14"
                        android:textSize="60dp"
                        android:paddingLeft="50dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="16"
                    >
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_vpn_key_24"
                        android:layout_weight="2"
                        android:background="#CCCCCC"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:contentDescription="Thông báo">
                    </ImageButton>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:layout_weight="14"
                        android:textSize="60dp"
                        android:paddingLeft="50dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="8">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ghi nhớ"
                        android:textColor="#626262"
                        android:layout_weight="5"
                        android:textSize="50dp"
                        android:paddingLeft="20dp"
                        >
                    </CheckBox>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Quên mật khẩu?"
                        android:textSize="50dp"
                        android:gravity="center_vertical"
                        android:textColor="#004AAD"
                        android:textStyle="bold"
                        android:layout_weight="1">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="30"
            android:gravity="center">
            <Button
                android:layout_width="600dp"
                android:layout_height="180dp"
                android:text="Đăng nhập"
                android:textSize="60dp"
                android:padding="20dp"
                android:textColor="#fff"
                android:background="@drawable/button_login_custom">
            </Button>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>